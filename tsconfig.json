{
    "compilerOptions": {
        "outDir": "./built/",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es5",
        "noImplicitThis": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "compileOnSave": false
}
